<h3 class="name anchorable-toc">
  {{#link-to this.routeName item.name class="toc-anchor"}}{{/link-to}}
  <code>{{item.name}}</code>
</h3>

{{#if method.params}}
  <span class="args">
    ({{parameterSentence}})
  </span>
{{/if}}

{{#if isPrivate}}
  <span class="flag private">private</span>
{{/if}}

<div class="meta">
  Defined in
  {{#project-link file=item.file line=item.line class="api-file-link"}}
      {{item.file}}:{{item.line}}
  {{/project-link}}
</div>

<div class="description">
  {{{item.description}}}
</div>

<p></p>

<div class="params">
  {{#if item.parameters}}
    <h3>Parameters:</h3>
    <dl>
      {{#each param in item.parameters}}
        <dt>
          <strong>{{param.name}}</strong>
          <span class="type">{{param.type}}</span>
        </dt>
        <dd>
          {{param.description}}
        </dd>
      {{/each}}
    </dl>
  {{/if}}
</div>
